<robot name="robotic_arm">

    <!-- FIXED WORLD FRAME (REQUIRED BY IKPy) -->
    <link name="world"/>

    <joint name="world_to_base" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

    <!-- BASE -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.045" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.09" radius="0.15"/>
            </geometry>
        </visual>
    </link>

    <link name="base_rot">
        <visual>
            <geometry>
                <box size="0.07 0.078 0.052"/>
            </geometry>
        </visual>
    </link>

    <joint name="base_joint" type="revolute">
        <parent link="base_link"/>
        <child link="base_rot"/>
        <origin xyz="0 0 0.116" rpy="0 0 0"/>
        <axis xyz="0 0 -1"/>
        <limit lower="-3.14" upper="3.14"/>
    </joint>

    <!-- LOWER ARM -->
    <link name="lower_arm">
        <visual>
            <origin xyz="0 0 0.12375" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.2475" radius="0.07"/>
            </geometry>
        </visual>
    </link>

    <joint name="shoulder_joint" type="revolute">
        <parent link="base_rot"/>
        <child link="lower_arm"/>
        <origin xyz="0 0 0.026" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-1.57" upper="1.57"/>
    </joint>

    <!-- CENTER ARM -->
    <link name="center_arm">
        <visual>
            <origin xyz="0 0 0.08625" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.1725" radius="0.055"/>
            </geometry>
        </visual>
    </link>

    <joint name="elbow_joint" type="revolute">
        <parent link="lower_arm"/>
        <child link="center_arm"/>
        <origin xyz="0 0 0.2475" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-2.1" upper="2.1"/>
    </joint>

    <!-- UPPER ARM -->
    <link name="upper_arm">
        <visual>
            <origin xyz="0 0 0.05375" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.1075" radius="0.05"/>
            </geometry>
        </visual>
    </link>

    <joint name="wrist_joint_1" type="revolute">
        <parent link="center_arm"/>
        <child link="upper_arm"/>
        <origin xyz="0 0 0.1725" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="-2.1" upper="2.1"/>
    </joint>

    <!-- GRIPPER BASE -->
    <link name="gripper">
        <visual>
            <origin xyz="0 0 0.0125" rpy="0 0 0"/>
            <geometry>
                <box size="0.2 0.05 0.025"/>
            </geometry>
        </visual>
    </link>

    <joint name="wrist_joint_2" type="revolute">
        <parent link="upper_arm"/>
        <child link="gripper"/>
        <origin xyz="0 0 0.1075" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14" upper="3.14"/>
    </joint>

    <!-- LEFT FINGER -->
    <link name="finger_left">
        <visual>
            <origin xyz="0.04 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.08 0.02 0.03"/>
            </geometry>
        </visual>
    </link>

    <joint name="finger_left_joint" type="prismatic">
        <parent link="gripper"/>
        <child link="finger_left"/>
        <origin xyz="-0.06 0.025 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="0.0" upper="0.04" effort="1" velocity="0.1"/>
    </joint>


    <!-- RIGHT FINGER -->
    <link name="finger_right">
        <visual>
            <origin xyz="0.04 0 0" rpy="0 0 0"/>
            <geometry>
                <box size="0.08 0.02 0.03"/>
            </geometry>
        </visual>
    </link>
    
    <joint name="finger_right_joint" type="prismatic">
        <parent link="gripper"/>
        <child link="finger_right"/>
        <origin xyz="-0.06 -0.025 0" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <limit lower="0.0" upper="0.04" effort="1" velocity="0.1"/>

        <mimic joint="finger_left_joint" multiplier="1"/>
    </joint>



</robot>
